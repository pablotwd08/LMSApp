<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaInicialActicity"
    android:id="@+id/layoutMenuLateral"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TelaInicialActicity">

        <include layout="@layout/toolbar" />

        <Button
            android:id="@+id/buttonChocolate"
            android:layout_width="205dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="#8FCDEA"
            android:text="@string/chocolate" />

        <Button
            android:id="@+id/buttonMorango"
            android:layout_width="205dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="#8FCDEA"
            android:text="@string/morango" />

        <Button
            android:id="@+id/buttonCreme"
            android:layout_width="205dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:backgroundTint="#8FCDEA"
            android:text="@string/creme" />

    </LinearLayout>

    <include layout="@layout/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>